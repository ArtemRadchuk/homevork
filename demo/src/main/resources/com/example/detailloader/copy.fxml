<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label style="-fx-text-fill: red">Найдены ошибки</Label>
    <Label>Ошибки были помечены комментариями</Label>
    <Button text="Выберите папку куда сохранится файл" onAction="#locateDirect"/>
    <Button text="Загрузить файл на компьютер" onAction="#writeFile"/>
</VBox>
